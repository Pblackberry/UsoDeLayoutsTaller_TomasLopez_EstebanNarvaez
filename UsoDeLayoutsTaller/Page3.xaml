<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsoDeLayoutsTaller.Page3"
             Title="Absolute Layout">
    <AbsoluteLayout Margin="40">
        <Button
        Text="Regresar a pagina principal"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        AbsoluteLayout.LayoutBounds="1, 1"
        Clicked="Button_Clicked"/>
        <ScrollView Orientation="Horizontal">
            <StackLayout Orientation="Horizontal" Padding="10" Spacing="20">
                <Label Text="Item 1" FontSize="20" />
                <Label Text="Item 2" FontSize="20" />
                <Label Text="Item 3" FontSize="20" />
                <Label Text="Item 4" FontSize="20" />
                <Label Text="Item 5" FontSize="20" />
            </StackLayout>
        </ScrollView>

    </AbsoluteLayout>
    
    
</ContentPage>